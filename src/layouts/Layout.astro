---
import background from '@assets/background.svg';
import { ClientRouter } from 'astro:transitions';
interface Props {
	title?: string;
}

const { title = 'Astro Text Reveal' } = Astro.props;
---

<!doctype html>
<html
	lang='en'
	transition:animate='fade'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
		<link
			href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap'
			rel='stylesheet'
		/>
		<link
			href='https://fonts.googleapis.com/css2?family=Roboto:wght@400&display=swap'
			rel='stylesheet'
		/>
		<ClientRouter />
	</head>
	<body>
		<img
			id='background'
			src={background.src}
			alt=''
			fetchpriority='high'
		/>
		<slot />
		<script>
			import '../utils/RevealAnimationHandler';
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Open Sans', sans-serif;
		scrollbar-gutter: stable;
	}

	/* Set default opacity to 0 for text elements */
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	p,
	span,
	a,
	li,
	[data-reveal],
	:where([data-reveal='title']),
	:where([data-reveal='title-words']),
	:where([data-reveal='lines']) {
		opacity: 0;
	}

	#background {
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		position: absolute;
		z-index: -1;
		filter: blur(100px);
	}
</style>
