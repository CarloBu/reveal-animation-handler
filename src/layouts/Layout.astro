---
import background from '@assets/background.svg';
import { ClientRouter } from 'astro:transitions';
interface Props {
	title?: string;
}

const { title = 'Astro Text Reveal' } = Astro.props;
---

<!doctype html>
<html
	lang='en'
	transition:animate='fade'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.svg'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<meta
			name='github-repository'
			content='https://github.com/CarloBu/reveal-animation-handler'
		/>
		<title>{title}</title>

		<!-- Open Graph / Facebook -->
		<meta
			property='og:type'
			content='website'
		/>
		<meta
			property='og:title'
			content={title}
		/>
		<meta
			property='og:image'
			content='/revelanimationhandler.jpg'
		/>

		<!-- Twitter -->
		<meta
			property='twitter:card'
			content='summary_large_image'
		/>
		<meta
			property='twitter:title'
			content={title}
		/>
		<meta
			property='twitter:image'
			content='/revelanimationhandler.jpg'
		/>
		<link
			href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap'
			rel='stylesheet'
		/>

		<ClientRouter />
	</head>
	<body>
		<img
			id='background'
			src={background.src}
			alt=''
			fetchpriority='high'
		/>
		<slot />
		<script>
			import '../utils/RevealAnimationHandler';
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Open Sans', sans-serif;
		scrollbar-gutter: stable;
	}

	#background {
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		position: absolute;
		z-index: -1;
		filter: blur(100px);
	}
</style>
